---
import '../styles/global.css';

const businessInfo = {
	name: 'Serene Onsite Imaging',
	phone: '+1 (954) 352-5516',
	phoneClean: '+19543525516',
	email: 'admin@sereneonsiteimagingfl.com',
	address:
		'1751 David Walker Dr, Deer Island, Florida 32778, United States of America',
};
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />

		<!-- SEO -->
		<title>
			Serene Onsite Imaging | Advanced Diagnostic Imaging in Florida
		</title>
		<meta
			name="description"
			content="Serene Onsite Imaging provides professional, compassionate, and precise healthcare imaging services directly to your facility. Mobile diagnostic imaging across Florida."
		/>
		<meta
			name="keywords"
			content="mobile imaging, diagnostic imaging, onsite imaging, Florida, healthcare, X-ray, ultrasound"
		/>

		<!-- Open Graph -->
		<meta
			property="og:title"
			content="Serene Onsite Imaging | Advanced Diagnostic Imaging"
		/>
		<meta
			property="og:description"
			content="Professional healthcare imaging services delivered directly to your facility in Florida."
		/>
		<meta property="og:type" content="website" />

		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:wght@500;600;700&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body>
		<!-- Header -->
		<header class="header" id="header">
			<div class="container header__inner">
				<a
					href="/"
					class="header__logo"
					aria-label="Serene Onsite Imaging Home"
				>
					<img
						src="/logo.svg"
						alt="Serene Onsite Imaging Logo"
						width="32"
						height="32"
					/>
				</a>

				<nav class="header__nav" id="nav" aria-label="Main navigation">
					<ul class="header__nav-list">
						<li>
							<a href="#" class="header__nav-link active">Home</a>
						</li>
						<!-- <li>
							<a href="#services" class="header__nav-link"
								>Services</a>
						</li> -->
						<!-- <li>
							<a href="#about" class="header__nav-link"
								>About Us</a>
						</li> -->
					</ul>
					<a
						href={`tel:${businessInfo.phoneClean}`}
						class="header__cta">Quick Contact</a
					>
				</nav>

				<button
					class="header__menu-btn"
					id="menuBtn"
					aria-label="Toggle menu"
					aria-expanded="false"
				>
					<span></span>
					<span></span>
					<span></span>
				</button>
			</div>
		</header>

		<!-- Hero Section -->
		<section class="hero" id="home">
			<div class="container">
				<div class="hero__content">
					<h1 class="hero__title">
						Advanced Diagnostic Imaging
						<span>Delivered Onsite.</span>
					</h1>
					<p class="hero__description">
						Serene Onsite Imaging provides professional,
						compassionate, and precise healthcare imaging services
						directly to your facility. We bring clarity and care to
						every patient.
					</p>
					<div class="hero__buttons">
						<a
							href={`tel:${businessInfo.phoneClean}`}
							class="btn btn--primary">Contact Us Today</a
						>
						<!-- <a href="#services" class="btn btn--outline"
							>Explore Services</a
						> -->
					</div>
				</div>
			</div>
		</section>

		<!-- Features Section -->
		<section class="features" id="services">
			<div class="container">
				<div class="features__grid">
					<!-- Feature 1: Professional Care -->
					<div class="feature-card">
						<div class="feature-card__icon">
							<svg
								xmlns="http://www.w3.org/2000/svg"
								fill="none"
								viewBox="0 0 24 24"
								stroke-width="1.5"
								stroke="currentColor"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z"
								></path>
							</svg>
						</div>
						<h3 class="feature-card__title">Professional Care</h3>
						<p class="feature-card__description">
							Our certified technicians ensure the highest
							standards of clinical excellence and patient safety.
						</p>
					</div>

					<!-- Feature 2: Onsite Efficiency -->
					<div class="feature-card">
						<div class="feature-card__icon">
							<svg
								xmlns="http://www.w3.org/2000/svg"
								fill="none"
								viewBox="0 0 24 24"
								stroke-width="1.5"
								stroke="currentColor"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z"
								></path>
							</svg>
						</div>
						<h3 class="feature-card__title">Onsite Efficiency</h3>
						<p class="feature-card__description">
							We bring the lab to you, reducing patient transport
							stress and accelerating diagnostic turnaround.
						</p>
					</div>

					<!-- Feature 3: Precision Imaging -->
					<div class="feature-card">
						<div class="feature-card__icon">
							<svg
								xmlns="http://www.w3.org/2000/svg"
								fill="none"
								viewBox="0 0 24 24"
								stroke-width="1.5"
								stroke="currentColor"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5m-13.5-9L12 3m0 0l4.5 4.5M12 3v13.5"
								></path>
							</svg>
						</div>
						<h3 class="feature-card__title">Precision Imaging</h3>
						<p class="feature-card__description">
							State-of-the-art mobile equipment delivering
							high-resolution imaging for accurate results.
						</p>
					</div>
				</div>
			</div>
		</section>

		<!-- CTA Section -->
		<section class="cta" id="contact">
			<div class="container">
				<div class="cta__card">
					<div class="cta__content">
						<h2 class="cta__title">
							Ready to schedule an imaging session?
						</h2>
						<p class="cta__description">
							Our team is available to assist healthcare
							facilities with reliable mobile imaging solutions.
							Reach out to discuss your needs.
						</p>
						<a
							href={`tel:${businessInfo.phoneClean}`}
							class="cta__button"
						>
							<svg
								xmlns="http://www.w3.org/2000/svg"
								fill="none"
								viewBox="0 0 24 24"
								stroke-width="1.5"
								stroke="currentColor"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"
								></path>
							</svg>
							{businessInfo.phone}
						</a>
					</div>
				</div>
			</div>
		</section>

		<!-- Footer -->
		<footer class="footer" id="about">
			<div class="container">
				<div class="footer__grid">
					<!-- Brand Column -->
					<div class="footer__brand">
						<div class="footer__logo">
							<img
								src="/logo.svg"
								alt="Serene Onsite Imaging Logo"
								width="28"
								height="28"
							/>
						</div>
						<p class="footer__tagline">
							Providing specialized diagnostic onsite imaging
							services across Florida. Committed to clinical
							excellence and patient-centered care.
						</p>
					</div>

					<!-- Contact Column -->
					<div class="footer__contact">
						<h4 class="footer__section-title">
							Contact Information
						</h4>
						<ul class="footer__contact-list">
							<li class="footer__contact-item">
								<svg
									xmlns="http://www.w3.org/2000/svg"
									fill="none"
									viewBox="0 0 24 24"
									stroke-width="1.5"
									stroke="currentColor"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"
									></path>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"
									></path>
								</svg>
								<span>{businessInfo.address}</span>
							</li>
							<li class="footer__contact-item">
								<svg
									xmlns="http://www.w3.org/2000/svg"
									fill="none"
									viewBox="0 0 24 24"
									stroke-width="1.5"
									stroke="currentColor"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"
									></path>
								</svg>
								<a href={`tel:${businessInfo.phoneClean}`}
									>{businessInfo.phone}</a
								>
							</li>
							<li class="footer__contact-item">
								<svg
									xmlns="http://www.w3.org/2000/svg"
									fill="none"
									viewBox="0 0 24 24"
									stroke-width="1.5"
									stroke="currentColor"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"
									></path>
								</svg>
								<a href={`mailto:${businessInfo.email}`}
									>{businessInfo.email}</a
								>
							</li>
						</ul>
					</div>

					<!-- Hours Column -->
					<div class="footer__hours">
						<h4 class="footer__section-title">Business Hours</h4>
						<ul class="footer__hours-list">
							<li class="footer__hours-item">
								<span>Mon - Fri:</span>
								<span>8:00 AM - 6:00 PM</span>
							</li>
							<li class="footer__hours-item">
								<span>Saturday:</span>
								<span>9:00 AM - 2:00 PM</span>
							</li>
							<li class="footer__hours-item emergency">
								<span>Emergency:</span>
								<span>24/7 Available</span>
							</li>
						</ul>
					</div>
				</div>

				<!-- Bottom Bar -->
				<div class="footer__bottom">
					<p>
						&copy; 2026 All right reserved by <strong
							>SERENE ONSITE IMAGING, LLC</strong>
					</p>
					<div class="footer__legal">
						<a href="/privacy">Privacy Policy</a>
						<a href="/terms">Terms of Service</a>
					</div>
				</div>
			</div>
		</footer>

		<script>
			// Mobile menu toggle
			const menuBtn = document.getElementById('menuBtn');
			const nav = document.getElementById('nav');

			if (menuBtn && nav) {
				menuBtn.addEventListener('click', () => {
					const isOpen = nav.classList.toggle('open');
					menuBtn.setAttribute('aria-expanded', isOpen.toString());
				});
			}

			// Header scroll effect
			const header = document.getElementById('header');

			if (header) {
				window.addEventListener('scroll', () => {
					if (window.scrollY > 50) {
						header.classList.add('scrolled');
					} else {
						header.classList.remove('scrolled');
					}
				});
			}

			// Smooth scroll for anchor links
			document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
				anchor.addEventListener('click', function (e) {
					const href = this.getAttribute('href');
					if (href && href !== '#') {
						e.preventDefault();
						const target = document.querySelector(href);
						if (target) {
							target.scrollIntoView({ behavior: 'smooth' });
							// Close mobile menu if open
							nav?.classList.remove('open');
							menuBtn?.setAttribute('aria-expanded', 'false');
						}
					}
				});
			});
		</script>
	</body>
</html>
